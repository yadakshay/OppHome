<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_7dp" android:id="@+id/securityGuidelinesLayout" android:visibility="gone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:background="@color/colorWhite" />

            <TextView
                android:id="@+id/dialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp" android:layout_marginBottom="@dimen/margin_10dp"
                android:drawablePadding="5dp"
                android:gravity="center_horizontal"
                android:text="Safety Guidelines"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_mini_medium"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:background="@color/colorWhite" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/safetyGuideline2"
                    style="@style/editTextDialogStyle"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:drawablePadding="@dimen/margin_15dp"
                    android:hint="@string/prompt_security_guidelines"
                    android:text=""
                    android:textCursorDrawable="@null" />

                <EditText
                    android:id="@+id/safetyGuideline3"
                    style="@style/editTextDialogStyle"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:drawablePadding="@dimen/margin_15dp"
                    android:hint="@string/prompt_security_guidelines"
                    android:text=""
                    android:textCursorDrawable="@null" />

                <EditText
                    android:id="@+id/safetyGuideline4"
                    style="@style/editTextDialogStyle"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:drawablePadding="@dimen/margin_15dp"
                    android:hint="@string/prompt_security_guidelines"
                    android:text=""
                    android:textCursorDrawable="@null" />

                <EditText
                    android:id="@+id/safetyGuideline5"
                    style="@style/editTextDialogStyle"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:drawablePadding="@dimen/margin_15dp"
                    android:hint="@string/prompt_security_guidelines"
                    android:text=""
                    android:textCursorDrawable="@null" />

                <EditText
                    android:id="@+id/safetyGuideline6"
                    style="@style/editTextDialogStyle"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:drawablePadding="@dimen/margin_15dp"
                    android:hint="@string/prompt_security_guidelines"
                    android:text=""
                    android:textCursorDrawable="@null" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="@dimen/margin_10dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:src="@drawable/icon_add" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:src="@drawable/delete" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:background="@color/colorWhite" />


        </LinearLayout>
    </RelativeLayout>


</LinearLayout>