<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:minHeight="?attr/actionBarSize"
    android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/newsImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:backgroundTint="#2e2f5e"
        android:cropToPadding="false"
        android:elevation="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:foregroundGravity="left"
        android:maxWidth="50sp"
        android:src="@drawable/news"
        android:visibility="gone" />

    <TextView
        android:id="@+id/toolbarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="16sp" android:textStyle="bold" android:textColor="@color/colorWhite" />

   <!-- <EditText
        android:id="@+id/searchTextView" android:imeOptions="actionSearch"
        style="@style/editTextStyle"
        android:gravity="right"
        android:queryHint="Search Open Home"
        android:touchscreenBlocksFocus="true"
        android:visibility="gone"
        app:defaultQueryHint="Search Open Home"   /> -->

    <EditText
        android:id="@+id/searchTextView" android:imeOptions="actionSearch"
        style="@style/searchStyle"
        android:hint="@string/prompt_search_propmt"
        android:inputType="text" android:visibility="gone"
        />

    <TextView
        android:id="@+id/cancelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="12sp" android:textStyle="bold" android:textColor="@color/colorWhite" android:visibility="gone" />


</android.support.v7.widget.Toolbar>